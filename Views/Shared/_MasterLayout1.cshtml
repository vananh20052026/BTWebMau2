<style type="text/css">
    html{
        font-size:14px;
        font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    body {
        background-color: white;
        margin: 0;
        padding: 0;
    }

    #container {
        width: 1680px;
    }

    header {
        background-image: url('../../content/images/img01.png');
        background-size: cover;
        background-position: center;
        background-color: white;
        display: flex;
        border: 2px solid dimgray;
        height: 700px;
    }

    nav {

    }

    .logo img {
        height: 70px;
    }
    nav ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    nav ul li{
        float:left;
    }

    nav ul li a{
        font-size: 1.5rem;
        display: block;
        color:white;
        text-align:center;
        padding:20px 26px;
        text-decoration:none;
    }

    nav ul li a:hover {
        background-color: white;
        color: black;
    }

    input {
        display: flex;
        text-align:right;
        width: 70px;
        padding: 8px 28px;
        margin: 5px;
        box-sizing: border-box;
    }

    #currency {
       
    }

    section {
        background-color:snow;
    }

    .btn{
        font-size: 1.5rem;
        display:inline-block;
        padding: 10px 15px;
        text-align:center;
        background-color:ghostwhite;
        color: black;
        text-decoration:none;
        margin: 6px;
    }
</style>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="container">
        <header>
            <div class="logo">
                <img src="~/Content/Images/logo.png" />
            </div>
            <nav>
                <ul>
                    <li><a href="#">HOME</a></li>
                    <li><a href="#">FASHION</a></li>
                    <li><a href="#">ELECTRONICS</a></li>
                    <li><a href="#">MOTORS</a></li>
                    <li><a href="#">MY ACCOUNT</a></li>
                    <li><a href="#">DEAL</a></li>
                    <li><a href="#">MY WISHLIST</a></li>
                    <li><a href="#">BLOG</a></li>
                    <li><a href="#">LOG IN</a></li>
                </ul>
            </nav>
            <form action="USD">
                <input list="currency">
                <datalist id="currency">
                    <option value="USD" />
                    <option value="EUR" />
                    <option value="VND" />
                    <option value="CAD" />
                </datalist>
            </form>
            <form action="ENGLISH">
                <input list="language">
                <datalist id="language">
                    <option value="ENGLISH" />
                    <option value="VIETMAMESE" />
                    <option value="JAPANESE" />
                    <option value="KOREAN" />
                </datalist>
            </form>
            <div>
                <a href="#" class="btn">0 item(s)</a>
            </div>
        </header>
        <section>
                @RenderBody()
        </section>
    </div>
</body>
</html>
